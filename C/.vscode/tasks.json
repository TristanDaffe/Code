{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "C:\\Program^ Files^ ^(x86)\\Microsoft^ Visual^ Studio\\2019\\Enterprise\\Common7\\Tools\\VsDevCmd.bat",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe générer le fichier actif",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\.trash\\${fileBasenameNoExtension}.exe",
                "/Fd:",
                "${workspaceFolder}\\.trash\\${fileBasenameNoExtension}.pdb",
                "/Fo:",
                "${workspaceFolder}\\.trash\\${fileBasenameNoExtension}.obj",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        }
    ]
}